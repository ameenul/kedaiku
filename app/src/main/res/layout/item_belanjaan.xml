<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:backgroundTint="@android:color/white">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:padding="8dp">

<!-- Icon Delete -->
<ImageView
    android:id="@+id/imageViewDelete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_delete"
    android:contentDescription="hapus item"
    android:padding="8dp"
    android:layout_gravity="center_vertical"/>

<!-- Kolom Tengah (Nama Barang dan Qty x Harga Satuan) -->
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="2"
    android:padding="8dp">

    <!-- Nama Barang -->
    <TextView
        android:id="@+id/textViewItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Barang"
        android:textSize="12sp"
        android:textColor="@android:color/black"/>

    <!-- Qty x Harga Satuan -->
    <TextView
        android:id="@+id/textViewItemDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qty x Harga Satuan"
        android:textSize="12sp"
        android:textColor="@android:color/black"/>
</LinearLayout>

<!-- Kolom Kanan (Total Harga) -->
<TextView
    android:id="@+id/textViewItemTotal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="8dp"
    android:text="Total Harga"
    android:textSize="12sp"
    android:textColor="@android:color/black"
    android:gravity="end|center_vertical"/>
</LinearLayout>
    </androidx.cardview.widget.CardView>
