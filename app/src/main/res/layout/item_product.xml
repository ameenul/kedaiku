<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="#FFFFFF"> <!-- Latar belakang putih -->

    <!-- Nama Produk -->
    <TextView
        android:id="@+id/textViewProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Produk"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000" /> <!-- Teks hitam untuk kontras -->

    <!-- SKU -->
    <TextView
        android:id="@+id/textViewProductSKU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewProductName"
        android:text="SKU: "
        android:textSize="14sp"
        android:textColor="#616161" /> <!-- Teks abu-abu gelap -->

    <!-- Harga Pokok -->
    <TextView
        android:id="@+id/textViewProductPrimaryPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewProductSKU"
        android:text="Harga Pokok: "
        android:textSize="14sp"
        android:textColor="@android:color/holo_blue_light" /> <!-- Warna biru terang -->

    <!-- Harga Jual -->
    <TextView
        android:id="@+id/textViewProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewProductSKU"
        android:layout_toEndOf="@id/textViewProductPrimaryPrice"
        android:layout_marginStart="16dp"
        android:text="Harga Jual: "
        android:textSize="14sp"
        android:textColor="@android:color/holo_green_dark" /> <!-- Warna hijau gelap -->

    <!-- Profit -->
    <TextView
        android:id="@+id/textViewProductProfit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewProductPrimaryPrice"
        android:layout_marginTop="4dp"
        android:text="Laba: "
        android:textSize="14sp"
        android:textColor="@android:color/holo_orange_dark" /> <!-- Warna oranye gelap -->

    <!-- Stok -->
    <TextView
        android:id="@+id/textViewProductStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewProductProfit"
        android:layout_marginTop="4dp"
        android:text="Stok: "
        android:textSize="14sp"
        android:textColor="#000000" /> <!-- Teks hitam -->

    <!-- Menu Opsi -->
    <ImageView
        android:id="@+id/imageViewOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textViewProductStock"
        android:layout_alignParentEnd="true"
        android:contentDescription="Menu Opsi"
        android:src="@android:drawable/ic_menu_more"
        app:tint="#616161" /> <!-- Warna ikon abu-abu gelap -->
</RelativeLayout>
