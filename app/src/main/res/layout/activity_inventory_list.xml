<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- LinearLayout Utama -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp">

<!-- Header Kartu Stok -->
<TextView
    android:id="@+id/textViewStockTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Kartu Stok"
    android:textStyle="bold"
    android:textSize="18sp"
    android:gravity="center"
    android:paddingBottom="8dp" />

<!-- Detail Produk -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <!-- TextView untuk detail produk -->
    <!-- ... (tidak berubah) -->
</LinearLayout>

<!-- Filter Dropdown -->
<Spinner
    android:id="@+id/spinnerFilter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:entries="@array/filter_options"
    android:minHeight="48dp"
    android:spinnerMode="dropdown" />

<!-- TextView untuk menampilkan tanggal terpilih -->
<TextView
    android:id="@+id/textViewSelectedDates"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Tanggal Terpilih: Semua Waktu"
    android:textSize="14sp"
    android:textColor="#FFFFFF"
    android:paddingBottom="8dp" />

<!-- Tabel Header -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#3F51B5"
    android:padding="8dp"
    android:layout_marginBottom="4dp">

    <!-- TextView untuk header tabel -->
    <!-- ... (tidak berubah) -->
</LinearLayout>

<!-- RecyclerView -->
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerViewInventory"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:paddingBottom="88dp"
android:clipToPadding="false" />
</LinearLayout>

    <!-- FAB untuk Tambah/Kurangi Stok -->
<com.google.android.material.floatingactionbutton.FloatingActionButton
android:id="@+id/fabAddStock"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="end|bottom"
android:layout_marginEnd="16dp"
android:layout_marginBottom="16dp"
android:contentDescription="Tambah/Kurangi Stok"
android:src="@drawable/ic_add" />

    <!-- FAB untuk Ekspor CSV -->
<com.google.android.material.floatingactionbutton.FloatingActionButton
android:id="@+id/fabExportCsv"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="end|bottom"
android:layout_marginEnd="16dp"
android:layout_marginBottom="88dp"
    android:contentDescription="Ekspor CSV"
    android:src="@drawable/ic_csv" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
