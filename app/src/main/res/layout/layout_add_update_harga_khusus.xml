<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nama Produk -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Produk"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pilih nama produk"
            android:inputType="text"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Nama Grosir -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Nama Harga Khusus"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextWholesaleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Masukkan nama harga husus"
            android:inputType="text"
            android:padding="8dp" />

        <!-- Harga Normal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harga Normal"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 0"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- HPP -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HPP (Harga Pokok Penjualan)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewHpp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 0"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Dropdown Member -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Member"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Persentase Potongan -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Persentase Potongan"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editTextDiscountPercentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan persentase potongan"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewDiscountAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 0"
            android:textSize="12sp"
            android:layout_marginBottom="16dp" />

        <!-- Harga Khusus -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harga Khusus"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewSpecialPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 0"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Status Radio Button -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <RadioGroup
            android:id="@+id/radioGroupStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aktif"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioButtonInactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak Aktif" />
        </RadioGroup>

        <!-- Tombol Simpan -->
        <Button
            android:id="@+id/buttonSaveSpecialPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
