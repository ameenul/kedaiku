<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="#FFFFFF"> <!-- Latar belakang putih -->

    <!-- Nama Pelanggan -->
    <TextView
        android:id="@+id/textViewCreditorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Creditor"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000" /> <!-- Warna teks hitam untuk kontras -->

    <!-- Nomor Telepon -->
    <TextView
        android:id="@+id/textViewCreditorPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCreditorName"
        android:text="Nomor Telepon"
        android:textSize="14sp"
        android:textColor="#616161" /> <!-- Warna teks abu-abu gelap -->


    <!-- ImageButton untuk Menu -->
    <ImageView
        android:id="@+id/imageViewOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textViewCreditorPhone"
        android:layout_alignParentEnd="true"
        android:contentDescription="Options"
        android:src="@android:drawable/ic_menu_more"
        app:tint="#616161" /> <!-- Warna ikon abu-abu gelap -->
</RelativeLayout>
