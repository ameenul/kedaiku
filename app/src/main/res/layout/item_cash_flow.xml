<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="#FFFFFF">
    <!-- TextView untuk jumlah (Amount) -->
<TextView
android:id="@+id/textViewAmount"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Rp 0"
android:textSize="16sp"
android:textStyle="bold"
android:textColor="#000000" /> <!-- Warna teks kontras -->

    <!-- TextView untuk deskripsi -->
<TextView
android:id="@+id/textViewDescription"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:paddingTop="4dp"
android:text="Deskripsi"
android:textSize="14sp"
android:textColor="#616161" /> <!-- Warna teks abu-abu gelap -->

    <!-- TextView untuk tanggal -->
<TextView
android:id="@+id/textViewDate"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:paddingTop="2dp"
android:text="Tanggal"
android:textSize="12sp"
android:textColor="#757575" /> <!-- Warna teks abu-abu lebih terang -->
    </LinearLayout>
