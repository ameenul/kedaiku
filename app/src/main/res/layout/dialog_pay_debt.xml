<!-- dialog_pay_debt.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewUnpaidAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belum Terbayar: Rp 0"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>



    <EditText
        android:id="@+id/editTextAmountPaid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jumlah yang dibayar"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textViewAmountToPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah yang akan dibayar:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:id="@+id/textViewPaymentError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorError"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:id="@+id/textViewKasLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Kas Pembayaran"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerKas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/buttonPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bayar Hutang" />
</LinearLayout>
